{
  "manifest_version": 3,
  "name": "Tor Connector",
  "version": "1.0",
  "permissions": [
    "proxy",
    "storage",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "tor_rules",  // Usa un nombre de id diferente, m√°s claro y consistente
      "enabled": true,
      "path": "rules.json"
    }]
  }
}

